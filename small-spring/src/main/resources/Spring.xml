<?xml version="1.0" encoding="UTF-8"?>
<beans>

<!--    <bean class="cn.gmfan.springframework.beans.event.ContextRefreshedEventListener"/>-->

<!--    <bean class="cn.gmfan.springframework.beans.event.CustomEventListener"/>-->

<!--    <bean class="cn.gmfan.springframework.beans.event.ContextClosedEventListener"/>-->

        <bean id="userService" class="cn.gmfan.springframework.aop.UserService"/>

        <bean class="cn.gmfan.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

        <bean id="beforeAdvice" class="cn.gmfan.springframework.aop.UserServiceBeforeAdvice"/>

        <bean id="methodInterceptor" class="cn.gmfan.springframework.aop.framework.adapter.MethodBeforeAdviceInterceptor">
            <property name="advice" ref="beforeAdvice"/>
        </bean>

        <bean id="pointcutAdvisor" class="cn.gmfan.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
            <property name="expression" value="execution(* cn.gmfan.springframework.aop.IUserService.*(..))"/>
            <property name="advice" ref="methodInterceptor"/>
        </bean>

</beans>
